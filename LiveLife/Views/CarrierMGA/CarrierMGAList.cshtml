
@model List<LiveLife.Context.CarrierMGA>

@{
    ViewBag.Title = "CarrierMGAList";
}

<style>
    #createBtn {
        margin-bottom: 20px;
    }
</style>

<h2>Carrier & MGA List</h2>

<button id="createBtn"  type="button" class="btn btn-success" onclick="location.href='@Url.Action("CarrierMGA","CarrierMGA")'">CREATE ENTITY</button>

<table class="table table-hover table-condensed">
    <tr>
        <th>Business Name</th>
        <th>Business Address</th>
        <th>Business Phone Number</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BusinessName</td>
            <td>@item.BusinessAddress</td>
            <td>@item.BusinessPhoneNumber</td>
            <td>
                <a href="@Url.Action("CarrierMGA", new { item.Id, item.BusinessName, item.BusinessAddress, item.BusinessPhoneNumber})" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("Delete", new { item.Id })" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>